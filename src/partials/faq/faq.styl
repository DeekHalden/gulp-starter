
.faq
    margin 0 auto
    padding-bottom 80px
    // margin-top -200px
    position relative
    +lg()
        width 100%
        padding-left 65px

.naming
    font-size 33px
    font-family $black
    margin-bottom 50px
    color $main

.faq__content
    color #1c3051
    font-size 14px
    font-family TitilliumWeb-Bold
    font-size 14px
    

.faq__block,
.faq__question
    position relative
    width 100%

// .faq__question
//     margin-bottom 18px
.faq__block
    margin-bottom 5px

.icon-toggle-wrapper
    cursor pointer
    top 39%
    left 19px
    display inline-block
    margin-right 28px
    vertical-align top
    &__icon
        color $main
        rem(21)
    &:hover 
        color #fff
    .icon-minus
        display none
        
.icon-close-wrapper
    color #fff
    display none

.faq__qw
    vertical-align middle
    position relative
    cursor pointer
    
    text-transform uppercase
    background-color: #f1f4f7;
    font-family $bold
    padding 14px 16px 
    border-radius 5px
    
    color: $add
    line-height 24px
    transition .2s linear all
    &:hover
        color #fff
        box-shadow: 0 11px 32px rgba(61, 78, 95, 0.8);
        background-color: #486776;
        background-image: linear-gradient(to top, rgba(0, 0, 0, 0.08) 0%, rgba(0, 0, 0, 0) 100%);
        .icon-toggle-wrapper
            &__icon
                color #fff
    
.faq__qw-bold
    background-color $blue
    color #fff
    border-radius 5px

.faq__answer
    display none
    padding 18px 0 18px 10px

.faq__text
    margin-left 15px
    border-left 1px solid $main
    color: #425568
    font-family: $regular
    rem(14)
    font-weight: 400;
    line-height: 26px;
    padding-left 37px
    z-index 1
    color $add
    

@media(max-width 1199px)
    
    .faq
        padding 0px 0 10px
        margin-bottom 20px
    .faq__content
        padding-top 0px
        padding-bottom 20px
    .faq__qw
        padding 8px 30px 8px 8px
    
    .icon-toggle-wrapper,
    .icon-close-wrapper
        &__text
            display none
    .faq__answer
        padding-left 10px
    .faq__text
        padding-left 10px
    .naming
        margin-bottom 20px
