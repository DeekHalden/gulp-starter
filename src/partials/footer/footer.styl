.footer 
  padding 20px 0
  position absolute
  bottom 0
  background-color: #2a3e48;
  height 260px
  left 0
  right 0
  +sm()
    height 157px
    
  +md()
    height auto
    padding-top 101px
    padding-bottom 101px
  &__logo-wrapper
    @extends .header__logo-wrapper
    margin 0 auto
    float none
    span
      font-weight 300
      letter-spacing 1px
    +sm()
      margin 0 
      width 140px
      float none
      // margin-bottom 32px
    +md()
      
      margin-bottom 62px
      img
        display table-cell
        height 47px
  &__aside
    &--left
      +sm()
        width 48%
        float left
      p
        display none
        color: #8b9aa2;
        font-family $regular
        rem(13)
        font-weight: 400;
        line-height: 25px;
        +sm()
          display block
          height 75px
          overflow hidden
    &--right
      display flex
      margin-top 20px
      flex-direction column
      +sm()
        flex-direction row
        margin-top 0
        width 48%
        float right
.nav
  margin-top 10px
  order 1
  width 100%
  clear both
  display flex
  justify-content space-around
  flex-wrap wrap
  flex-direction row
  text-align center
  +sm()
    order 0
    margin-top 0
    flex-direction column
    clear none 
    width 40%
  &__link
    text-align left
    margin-bottom 5px 
    display block
    font-family $bold
    font-size: 14px;
    font-weight: 700;
    text-decoration none
    color #fff
    +sm()
      margin-bottom 8px
    +md()
      margin-bottom 0
      & + .nav__link
        margin-top 20px
    &:hover
      color $main
  +sm()
    justify-content center
.additions
  width 100%
  float left
  +sm()
    float none
    width 60%
  
.search
  margin-top 10px
  order 2
  width 100%
  +sm()
    order 0
    margin-top 0
  &__form-control
    width 100%
    position relative
  &__input
    color #fff
    width 100%
    display block
    height 50px
    background-color #465760
    border-radius 5px !important
    border none
    padding-left 15px
    &[type="submit"]
      cursor pointer
      position absolute
      right 0
      padding-left 0
      top 0
      width 50px
      color $main
      background-color transparent
      border none
      &:focus
        outline none
      &:hover
        color #fff
.socials
  margin-top 10px
  display flex
  flex-direction row
  justify-content space-between
  +sm()
    margin-top 40px
  +md()
    margin-top 113px
    flex-direction row
    justify-content space-between
  &__link
    display block
    color #fff
    text-decoration none
    margin-bottom 5px
    +sm()
      i
        margin-right 10px
        rem(10)
    &:hover
      color $main
      i
        
        color #fff
    i
      display inline-block
      margin-right 5px
      color $main
      
@media(orientation: landscape)
  .footer
    height 267px
      
        
            