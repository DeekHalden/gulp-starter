.footer 
  padding 20px 0
  position absolute
  bottom 0
  background-color: #2a3e48;
  height 250px
  left 0
  right 0
  +xs()
    height 177px
  +sm()
    height 157px
    
  +md()
    height auto
    padding-top 101px
    padding-bottom 101px
  &__logo-wrapper
    @extends .header__logo-wrapper
    margin 0 auto
    float none
    span
      font-weight 300
      letter-spacing 1px
    +sm()
      margin 0 
      width 140px
      float none
      // margin-bottom 32px
    +md()
      
      margin-bottom 62px
      img
        display table-cell
        height 47px
  &__aside
    &--left
      +sm()
        width 48%
        float left
      p
        display none
        color: #8b9aa2;
        font-family $regular
        rem(13)
        font-weight: 400;
        line-height: 25px;
        +sm()
          display block
          height 75px
          overflow hidden
    &--right
      display flex
      margin-top 20px
      flex-direction column
      +sm()
        flex-direction row
        margin-top 0
        width 48%
        float right
.nav
  margin-top 10px
  width 100%
  clear both
  text-align center
  // justify-content space-around
  +sm()
    margin-top 0
    clear none 
    width 40%
    text-align left
  &__link
    text-align center
    margin-bottom 15px 
    width 50%
    display inline-block
    font-family $bold
    font-size: 14px;
    font-weight: 700;
    text-decoration none
    color #fff
    
    +xs()
      width: auto
      margin 0 10px  8px
    +sm()
      
      margin 0 
      width: 100%
      text-align left
      & + .nav__link
        margin-top 8px
    +md()
      margin-bottom 0
      & + .nav__link
        margin-top 21px
    +lg()
      & + .nav__link
        margin-top 22px
    &:hover
      color $main
.additions
  width 100%
  float left
  +sm()
    float none
    width 60%
  
