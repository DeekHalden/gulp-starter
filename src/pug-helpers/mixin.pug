mixin breadcrumbs(items, last)
  
  .breadcrumb.container
    ul.breadcrumb__list&attributes(attributes)
      each item in items
        li.breadcrumb__item
           a(href=item.link).breadcrumb__link= item.title
        li.breadcrumb__item.breadcrumb__item--devider /
      if last
        li.breadcrumb__item
          span.breadcrumb__link-current= last

mixin CreateTable(headings, rows)
  +b.TABLE.table--stripped&attributes(attributes)
    +e.TR.tr
      each heading in headings 
        +e.TH.th=heading
      each row in rows 
        +e.TR.tr
          each td , i in row
            -if(td.text)
              +e.TD.td(data-th=headings[i])
                i(class=td.icon.className+' '+td.icon.addClass )
                | #{td.text}
            -else 
              +e.TD.td(data-th=headings[i])=td

mixin PersonalInfoCard(title, icon, value, number,total,img, input)
  -if(input)
    +b.LABEL(class=attributes.class, for='in__'+attributes.id, data-text=attributes.text).form-control
      +e.H2.title=title.title
        -if(title.subtitle)
          span=title.subtitle
      -if(img)
        +e.IMG(src=img).img
      +b.INPUT(type="radio", name='in__'+ attributes.name, id='in__'+ attributes.id value='in__'+ attributes.id)
      
  -else 
    +b(class=attributes.class).clearfix
      +e.H2.title=title.title
        -if(title.subtitle)
          span=title.subtitle
      -if(value)
        +e.values-row.clearfix
          each el in value
            -if(el.title)
              +e.H3.value
                | #{el.title}
                span=el.amount
      -if(number)
        +e.H2.number=number
      -if(img)
        +e.IMG(src=img).img
      -if(total)
        +e.H2.total=total
      -if(icon)
        +e.I.icon(class=icon)


